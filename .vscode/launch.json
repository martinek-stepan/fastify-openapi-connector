  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Generate",
      "runtimeExecutable": "node",
      "cwd": "${workspaceFolder}/packages/generator",
      "runtimeArgs": [
        "--loader=ts-node/esm",
        "./src/cli.ts",
        "--spec-file=C:/Projects/fastify-glue/spec.yaml",
        "--types-file=./types.ts",
        "--service-file=./service.ts",
        "--schema-file=C:/Projects/fastify-glue/src/generated/schema.ts",
        "--override-types-file",
        "--paths-dir=./paths",
        "--webhooks-dir=./webhooks",
        "--security-dir=./security"
      ],
      "outputCapture": "std"
    }
  ]
}
